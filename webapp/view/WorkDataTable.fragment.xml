<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox>
        <Table id="workTable" items="{/workData}">
            <headerToolbar>
                <OverflowToolbar id="otbSubheader">
						<Title text="Control de horas" level="H2" />
						<ToolbarSpacer />
						<Button id="editButton" text="Editar" type="Transparent"
							press="onEdit" 
                            visible="{
                                    parts : [
                                        {path: 'visibilityRules>currentState'},
                                        {value: 'editButton'}
                                    ]
                                    ,
                                    formatter: '.formatter.isButtonVisible'
                                    }"/>
						<Button id="saveButton" text="Guardar" type="Transparent"
							press="onSave" 
                            visible="{
                                    parts : [
                                        {path: 'visibilityRules>currentState'},
                                        {value: 'saveButton'}
                                    ]
                                    ,
                                    formatter: '.formatter.isButtonVisible'
                                    }" />
						<Button id="cancelButton" text="Cancelar" type="Transparent"
							press="onCancel" 
                            visible="{
                                    parts : [
                                        {path: 'visibilityRules>currentState'},
                                        {value: 'cancelButton'}
                                    ]
                                    ,
                                    formatter: '.formatter.isButtonVisible'
                                    }" />
                        <Button id="addButton" icon="sap-icon://add" type="Transparent"
                            press="onAdd" 
                            visible="{
                                    parts : [
                                        {path: 'visibilityRules>currentState'},
                                        {value: 'addButton'}
                                    ]
                                    ,
                                    formatter: '.formatter.isButtonVisible'
                                    }"/>
					</OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Fecha" />
                </Column>
                <Column>
                    <Text text="Inicio de Jornada" />
                </Column>
                <Column>
                    <Text text="Final de Jornada" />
                </Column>
                <Column>
                    <Text text="Horas" />
                </Column>
                <Column>
                    <Text text="Total Horas" />
                </Column>
                <Column
                 id="Acciones"
                 visible="{
                                    parts : [
                                        {path: 'visibilityRules>currentState'},
                                        {value: 'Acciones'}
                                    ]
                                    ,
                                    formatter: '.formatter.isButtonVisible'
                                    }" >
                    <Text text="Acciones" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{date}"/>
                        <Text text="{startTime}"/>
                        <Text text="{endTime}"/>
                        <Text text="{hours}"/>
                        <Text text="{totalHours}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
